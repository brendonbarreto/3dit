<md-dialog aria-label="Song Search">
	<md-progress-linear md-mode="indeterminate" ng-show="q"></md-progress-linear>
	<md-toolbar>
		<div class="md-toolbar-tools">
			<h2>Procure sua música</h2>
		</div>
	</md-toolbar>

	<md-dialog-content>
		
		<div layout layout-align="center center">
			<div layout layout-align="center center" layout-sm="column" flex="100">
				<md-input-container flex="50">
					<label>Título</label>
					<input ng-model="title" type="text">
				</md-input-container>

				<md-input-container flex="40">
					<label>Artista</label>
					<input ng-model="artist" type="text">
				</md-input-container>

				<md-button class="md-icon-button" aria-label="Search" ng-click="search()" ng-disabled="q">
					<md-icon>search</md-icon>
				</md-button>
			</div>
		</div>

		<md-list ng-if="list.length" flex>
			<md-list-item class="md-3-line" ng-repeat="item in list" ng-click="select(item)">
				<img ng-src="{{item.AlbumCoverUrl}}" img-fallback="/Content/icons/ic_broken_image_white_48px.svg" class="small-cover" />
				<div class="md-list-item-text" layout="column">
					<h3>{{ item.SongTitle }}</h3>
					<h4>{{ item.ArtistName }}</h4>
					<p>{{ item.AlbumTitle }}</p>
				</div>
			</md-list-item>
			<md-divider></md-divider>
		</md-list>
	</md-dialog-content>
</md-dialog>

